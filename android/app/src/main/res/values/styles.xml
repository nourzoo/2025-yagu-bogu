<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TextView" parent="android:Widget.TextView" />

    <!-- Pretendard -->
    <style name="TextView.Pretendard" parent="TextView" />

    <style name="TextView.Pretendard.Light" parent="TextView.Pretendard">
        <item name="android:fontFamily">@font/pretendard_light</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextView.Pretendard.Regular" parent="TextView.Pretendard">
        <item name="android:fontFamily">@font/pretendard_regular</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextView.Pretendard.Medium" parent="TextView.Pretendard">
        <item name="android:fontFamily">@font/pretendard_medium</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextView.Pretendard.SemiBold" parent="TextView.Pretendard">
        <item name="android:fontFamily">@font/pretendard_semibold</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextView.Pretendard.SemiBold.12" parent="TextView.Pretendard.SemiBold">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="TextView.Pretendard.SemiBold.18" parent="TextView.Pretendard.SemiBold">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="TextView.Pretendard.Bold" parent="TextView.Pretendard">
        <item name="android:fontFamily">@font/pretendard_bold</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <!-- Esamanru -->
    <style name="TextView.Esamanru" parent="TextView" />

    <style name="TextView.Esamanru.Light" parent="TextView.Esamanru">
        <item name="android:fontFamily">@font/esamanru_light</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextView.Esamanru.Medium" parent="TextView.Esamanru">
        <item name="android:fontFamily">@font/esamanru_medium</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextView.Esamanru.Bold" parent="TextView.Esamanru">
        <item name="android:fontFamily">@font/esamanru_bold</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="BottomNavigationView">
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="itemActiveIndicatorStyle">@android:color/transparent</item>
        <item name="itemBackground">@android:color/transparent</item>
        <item name="itemIconSize">24dp</item>
        <item name="itemIconTint">@color/color_bottom_navigation</item>
        <item name="itemPaddingBottom">28dp</item>
        <item name="itemRippleColor">@android:color/transparent</item>
        <item name="itemTextAppearanceActive">@style/TextView.Pretendard.SemiBold.12</item>
        <item name="itemTextAppearanceInactive">@style/TextView.Pretendard.SemiBold.12</item>
        <item name="itemTextColor">@color/color_bottom_navigation</item>
        <item name="labelVisibilityMode">labeled</item>
    </style>

</resources>
